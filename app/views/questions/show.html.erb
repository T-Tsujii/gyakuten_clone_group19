<div class="show-container">
  <h1>
    <%= @question.title %>
  </h1>

  <div class="detail">
    <%= markdown(@question.detail).html_safe %>
  </div>

  <hr>
  <div class="solution">
    <% @solutions.each.with_index(1) do |solution,i|%>
      <h3><%= "【回答 #{i}】" %></h3>
      <%= markdown(solution.content).html_safe%>
      <%#= markdown(solution.content).html_safe %>
    <% end %>
  </div>

  <div class="solution-container">
    <h1>回答投稿</h1>
    <%= form_with model: [@question,@solution], local: true do |f|%>
    <div class="form-group">
      <%=f.label :"【回答】"%>
      <%=f.text_area :content ,class: 'form-control' ,rows:5%>
    </div>
    <div class="form-group">
      <%=f.submit :"送信",class: 'btn btn-primary btn-block' %>
    </div>

    <%end%>
  </div>
</div>